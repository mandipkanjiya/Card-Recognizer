<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.ocrapp.util.TimeDifference"/>
        <variable
            name="model"
            type="com.ocrapp.ui.main.model.FindJob" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/_1sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/color10F24E30"
                app:strokeColor="@color/color10F24E30"
                app:strokeWidth="@dimen/_1sdp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_card_detail"
                        android:visibility="visible" />
                    <TextView
                        style="@style/darkTextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Electrician License"
                        android:visibility="visible"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    style="@style/darkTextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:visibility="visible"
                    android:textColor="@color/color60061026"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    style="@style/darkTextMedium"
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/color12000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llEffectiveDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">
                <TextView
                    style="@style/darkTextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Effective date"
                    android:visibility="visible"
                    android:textColor="@color/color60061026"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    style="@style/darkTextMedium"
                    android:id="@+id/tvEffectiveDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/color12000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">
                <TextView
                    style="@style/darkTextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Effective date"
                    android:visibility="visible"
                    android:textColor="@color/color60061026"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    style="@style/darkTextMedium"
                    android:id="@+id/tvExpiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/color12000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llLicenseNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">
                <TextView
                    style="@style/darkTextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Licence Number"
                    android:visibility="visible"
                    android:textColor="@color/color60061026"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    style="@style/darkTextMedium"
                    android:id="@+id/tvLicenseNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
