<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linBottomHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorDADADA" />

        <TextView
            android:id="@+id/tvNotesTitle"
            style="@style/darkTextSemiBoldPoppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:text="Enter Your \n Verification Code"
            android:textColor="@color/color14142B"
            android:textSize="@dimen/_16sdp" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.ocrapp.util.OtpEditText
                android:id="@+id/edtOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="6"
                android:imeOptions="actionDone"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="@dimen/_16sdp" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/btnSubmit"
            style="@style/mediumTextBtnFill"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/themecolor"
            android:gravity="center"
            android:text="Submit"

            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/whiteTextRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Havenâ€™t received OTP ?"
                android:textColor="@color/color605F5F"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvResent"
                style="@style/whiteTextMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="0.5"
                android:text="Resend"
                android:textColor="@color/themecolor"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>