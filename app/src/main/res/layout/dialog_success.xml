<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        android:layout_margin="@dimen/_5sdp">
        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_30sdp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvTitle"
            style="@style/darkTextSemiBold"
            android:text="Success!"
            android:textSize="@dimen/_18sdp"
            android:layout_below="@+id/ivSuccess"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            />
        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/darkTextRegular"
            android:text="Hurray you have completed your exam and now IELTS Analyst process it and in 30 minutes we will publish analytics of these answers. Best of luck."
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_below="@+id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"/>

        <TextView
            style="@style/mediumTextBtnFill"
            android:id="@+id/btnLetGo"
            android:text="Done"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
           android:layout_below="@+id/tvSubTitle"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>
    </RelativeLayout>
</layout>
