<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.ocrapp.util.TimeDifference" />

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.ocrapp.ui.main.viewmodel.VMSelectOption" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF7F4F2">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_5sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/ivBack"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvTitle"
                style="@style/darkTextSemiBold"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="2"
                android:text="Choose Identity"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <ImageView
                android:id="@+id/ivCardHistory"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_card_hitory"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvElectrician"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/colorEEEEEE"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_50sdp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical">
                        <TextView
                            style="@style/darkTextMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Electrician Card"
                            android:visibility="visible"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:textColor="@color/color061026"
                            android:textSize="@dimen/_12sdp" />
                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_select_option_errow"
                            android:visibility="visible" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvCanadaPrCard"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/colorEEEEEE"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_50sdp"

                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical">
                        <TextView
                            style="@style/darkTextMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Canada PR Card"
                            android:visibility="visible"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:textColor="@color/color061026"
                            android:textSize="@dimen/_12sdp" />
                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_select_option_errow"
                            android:visibility="visible" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvOntarioDrivingLicence"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/colorEEEEEE"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_50sdp"

                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical">
                        <TextView
                            style="@style/darkTextMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ontario Driving License"
                            android:visibility="visible"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:textColor="@color/color061026"
                            android:textSize="@dimen/_12sdp" />
                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_select_option_errow"
                            android:visibility="visible" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvPlumber"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/colorEEEEEE"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardElevation="0dp"

                    app:cardCornerRadius="@dimen/_50sdp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical">
                        <TextView
                            style="@style/darkTextMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Plumber Card"
                            android:visibility="visible"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:textColor="@color/color061026"
                            android:textSize="@dimen/_12sdp" />
                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_select_option_errow"
                            android:visibility="visible" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>
